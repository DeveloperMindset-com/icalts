{
    "compilerOptions": {
      "outDir": "dist",
      
      "declaration": true,
      "target": "ES2022",
      "module": "CommonJS",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "importHelpers": true,
      "alwaysStrict": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,

      "esModuleInterop": true,

      "typeRoots": [
        "./node_modules/@types",
        "./types"
      ],
    },
    "include": [
      "src/**/*",
      "__tests__/**/*"
    ]
  }